<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.gmail.ganeeva.d.homework.lesson1.Lesson1MainActivity">

    <TextView
        android:id="@+id/upperTextview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/upper_button"
        android:textAlignment="center"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/downTextview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/down_button"
        android:textAlignment="center"
        android:textSize="24sp" />

    <Button
        android:id="@+id/exchangeButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/exchange"
        android:textSize="24sp" />
</LinearLayout>
