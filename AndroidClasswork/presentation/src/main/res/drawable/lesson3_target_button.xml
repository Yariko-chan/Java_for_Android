<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_pressed="false">
    <layer-list >
        <item
            android:gravity="center">
            <shape
                android:shape="oval">
                <solid android:color="@android:color/white"/>
                <stroke android:color="@android:color/background_dark" android:width="5dp"/>
                <padding android:left="10dp"
                    android:top="10dp"
                    android:right="10dp"
                    android:bottom="10dp" />
            </shape>
        </item>

        <item
            android:gravity="center">

            <shape android:innerRadius="30dp"
                android:shape="oval">
                <solid android:color="@android:color/holo_red_light"/>
            </shape>
        </item>
    </layer-list>
</item>

<item android:state_pressed="true">
    <layer-list >
        <item
            android:gravity="center">
            <shape
                android:shape="oval">
                <solid android:color="@android:color/white"/>
                <stroke android:color="@android:color/background_dark" android:width="5dp"/>
                <padding android:left="10dp"
                    android:top="10dp"
                    android:right="10dp"
                    android:bottom="10dp" />
            </shape>
        </item>

        <item
            android:gravity="center">

            <shape android:innerRadius="30dp"
                android:shape="oval">
                <solid android:color="@android:color/holo_red_dark"/>
            </shape>
        </item>
    </layer-list>
</item>
</selector>